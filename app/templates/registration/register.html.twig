<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register!</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
      .form-signin {
        max-width: 330px;
        padding: 1rem;
        margin: auto;
      }
      .form-signin .form-floating:focus-within {
        z-index: 2;
      }
      .form-signin input[type="text"],
      .form-signin input[type="email"] {
        margin-bottom: -1px;
        border-bottom-right-radius: 0;
        border-bottom-left-radius: 0;
      }
      .form-signin input[type="password"] {
        margin-bottom: 10px;
        border-top-left-radius: 0;
        border-top-right-radius: 0;
      }
    </style>
  </head>
  <body class="text-center">
    <main class="form-signin w-100 mt-5">
      <form method="post">
        <h1 class="h3 mb-3 fw-normal">{{ 'registration.title'|trans }}</h1>

        {% for flash_error in app.flashes('error') %}
          <div class="alert alert-danger">{{ flash_error }}</div>
        {% endfor %}
        {% for flash_success in app.flashes('success') %}
          <div class="alert alert-success">{{ flash_success }}</div>
        {% endfor %}
        <div class="form-floating">
          {{ form_errors(form) }}
          {{ form_widget(form.nickname)}}
          <label for="{{ form.nickname.vars.id }}" >{{ 'form.nickname'|trans }}</label>
          {{ form_errors(form.nickname) }}
        </div>
        <div class="form-floating">
          {{ form_widget(form.email) }}
          <label for="{{ form.email.vars.id }}">{{ 'form.email'|trans }}</label>
          {{ form_errors(form.email) }}
        </div>
        <div class="form-floating">
          {{ form_widget(form.plainPassword) }}
          <label for="{{ form.plainPassword.vars.id }}">{{ 'form.password'|trans }}</label>
          {{ form_errors(form.plainPassword) }}
        </div>

        {{ form_rest(form) }}

        <button class="w-100 btn btn-lg btn-primary" type="submit">{{ 'button.register'|trans }}</button>
        <p class="mt-3 mb-3 text-muted">&copy; {{ "now"|date("Y") }}</p>
      </form>
    </main>
  </body>
</html>